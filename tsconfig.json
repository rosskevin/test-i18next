{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    // "checkJs": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./build/",
    "removeComments": false,
    "sourceMap": true,
    "target": "es2015",
    // Changing the following setting to TRUE fixes tests & the i18next type error in our  web app, but
    // it breaks dozens of other libraries in our app.
    "esModuleInterop": false,
    "lib": ["es6", "dom"],
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "strict": true
  },
  "include": ["./src/**/*", "./untyped-modules.d.ts"],
  "exclude": ["node_modules", "webpack", "./src/coverage", "build", "dist"]
}
